{
  "extends": "airbnb",
  "plugins": [
    "import"
  ],
  "settings": {
    "import/core-modules": [ "page", "eventEmitter", "screen" ],
  },
  "rules": {
    "comma-dangle": ["error", "never"],
    "no-global-assign": ["error"],
    "arrow-body-style": 0,
    "prefer-default-export": 0,
    "import/prefer-default-export": 0,
    "no-underscore-dangle": 0,
    "no-param-reassign": 0,
    "camelcase": 0,
    "no-plusplus": 0,
    "max-len": [2, 200, 4, {"ignoreUrls": true}],
    "indent": ["error", 4],
    "linebreak-style": 0,
    "eol-last": 0,
    "class-methods-use-this": 0
  },
  "globals": {
    "window": false,
    "document": false
  }
}
